{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": false
}
